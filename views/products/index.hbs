{{#extends "base"}}
{{#block "content"}}
<style>
    h1{
        color: #333;
        font-size:26px;
        margin-bottom:20px;
        padding: 0;
        margin-top: 20px;
        text-decoration:underline;
    }
    .table-header {
        background-color: #f2f2f2;
        font-weight: bold;
    }
</style>

<h1>ALL PRODUCTS</h1>
<h2>Search</h2>
<form method="GET" class="small-search-form">
    <i class="fa fa-search" aria-hidden="true"></i>
    {{{searchForm}}}
    <input type="submit" class="btn btn-primary mt-3"/>
    
</form>
<table class="table">
    <thead class="table-header">
        <th>Product ID</th>
        <th>Name</th>
        <th>Cost</th>
        <th>Description</th>
        <th>Location</th>
        <th>Category Id</th>
        <th>Tags</th>
        <th></th>
    </thead>
    {{#each products}}
    <tr>
        <td>
            {{this.id}}
        </td>
        <td>
            {{this.name}}
        </td>
        <td>
            {{this.cost}}
        </td>
        <td>
            {{this.description}}
        </td>
        <td>
            {{this.location}}
        </td>
        <td>
           
            {{this.category.name}}
        </td>
        <td>
             {{#each this.tags}}
             <span class="badge rounded-pill bg-success">{{this.name}}</span>
           
            {{/each}}
        </td>
        <td>
            <a href = "/products/update-product/{{this.id}}"
            class="btn btn-primary btn-sm">Update</a>
            <a href = "/cart/{{this.id}}/add"
            class="btn btn-warning btn-sm">Add To Cart</a>
        </td>
    </tr>
    {{/each}}
</table>
{{/block}}

{{/extends}}